<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FadCam" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="android:fontFamily">@font/ubuntu_regular</item>
<!--        the color for statusbar at top-->
        <item name="android:statusBarColor">@color/gray</item>
        <item name="colorTopBar">@color/gray</item>
        <item name="colorBottomNav">@color/gray</item>
        <item name="colorHeading">@color/colorHeading</item>
        <item name="colorButton">@color/colorButton</item>
        <item name="colorToggle">@color/colorToggle</item>
        <item name="colorSwitchTrack">@color/gray</item>
        <item name="colorDialog">@color/colorDialog</item>
        <item name="colorStatusBar">@color/colorStatusBar</item>
        <!-- Picker gradient colors - subtle gray gradient for night themes -->
        <item name="pickerGradientStart">@color/black</item>
        <item name="pickerGradientMid">#FF2A2A2A</item>
        <item name="pickerGradientEnd">#FF404040</item>
        <!-- Picker text colors -->
        <item name="pickerTextPrimary">@android:color/white</item>
        <item name="pickerTextSecondary">#999999</item>
        <!-- Section header color - use subtle gray for night theme -->
        <item name="sectionHeaderColor">#888888</item>
        
        <!-- Picker component overrides for better contrast in Faded Night theme ONLY -->
        <item name="pickerButtonBackground">@color/picker_button_background</item>
        <item name="pickerButtonText">@color/picker_button_text</item>
        <item name="pickerIconTint">@color/picker_icon_tint</item>
        <item name="pickerSliderActive">@color/picker_slider_active</item>
        <item name="pickerSliderInactive">@color/picker_slider_inactive</item>
    </style>
</resources>