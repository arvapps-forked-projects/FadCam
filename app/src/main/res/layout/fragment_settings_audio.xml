<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- Fixed Header -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="?attr/colorTopBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/ic_close"
            android:contentDescription="Back"
            android:tint="@android:color/white"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings_audio_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="12dp"
            android:textColor="@android:color/white"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/content_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp">

            <LinearLayout
                android:id="@+id/group_card_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

            <!-- Record Audio (compact) -->
            <LinearLayout
                android:id="@+id/row_record_audio"
                style="@style/SettingsGroupRow">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_audio"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/row_record_audio_title"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <TextView
                    android:id="@+id/value_record_audio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"
                    android:gravity="end"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Input Source (compact) -->
            <LinearLayout
                android:id="@+id/row_audio_input_source"
                style="@style/SettingsGroupRow">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_mic"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/row_input_source_title"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <TextView
                    android:id="@+id/value_audio_input_source"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"
                    android:gravity="end"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Noise Suppression (compact) -->
            <LinearLayout
                android:id="@+id/row_noise_suppression"
                style="@style/SettingsGroupRow">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_audio"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/row_noise_suppression_title"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <TextView
                    android:id="@+id/value_noise_suppression"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"
                    android:gravity="end"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <View style="@style/SettingsDivider" />

            <!-- Advanced Audio (compact) -->
            <LinearLayout
                android:id="@+id/row_audio_advanced"
                style="@style/SettingsGroupRow">
                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_settings"
                    android:tint="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/settings_advanced_title"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="?attr/colorHeading"/>
                <TextView
                    android:id="@+id/value_audio_advanced"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textColor="@android:color/darker_gray"
                    android:textSize="13sp"/>
                <ImageView
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/ic_arrow_right"
                    android:tint="@android:color/darker_gray"/>
            </LinearLayout>
            <!-- Removed trailing divider under last row -->
            </LinearLayout> <!-- end group_card_audio -->
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
