<?xml version="1.0" encoding="utf-8"?>
<!--
    Compact README content injected into picker_list_container.
    Removed nested ScrollView (parent sheet already scrollable) and replaced buttons with
    settings-style rows inside their own container (GitHub / Discord) separated by divider.
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="12dp"
    android:paddingEnd="12dp"
    android:paddingTop="4dp"
    android:paddingBottom="4dp">

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="@string/note_under_dev"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@android:color/white" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="@string/rencent_updates_title"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@android:color/white" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/recent_features"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@android:color/white" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="@string/upcoming_features_title"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textColor="@android:color/white" />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/upcoming_features"
        android:textAppearance="?attr/textAppearanceBody2"
        android:textColor="@android:color/white" />


    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="@string/thankyou_msg"
        android:textAppearance="?attr/textAppearanceBody1"
        android:textColor="@android:color/white" />

</LinearLayout>