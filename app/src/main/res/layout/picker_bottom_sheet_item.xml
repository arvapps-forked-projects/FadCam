<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="52dp"
    android:paddingStart="14dp"
    android:paddingEnd="12dp"
    android:gravity="center_vertical"
    android:background="@drawable/settings_home_row_bg">

    <TextView
        android:id="@+id/picker_item_leading_symbol"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:visibility="gone"
        android:fontFamily="@font/materialicons"/>

    <ImageView
        android:id="@+id/picker_item_leading_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="16dp"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <View
            android:id="@+id/picker_item_color_swatch"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_marginEnd="12dp"
            android:background="@drawable/theme_color_swatch_bg"
            android:visibility="gone"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <TextView
                    android:id="@+id/picker_item_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="15sp"
                    android:textStyle="normal"/>
                <TextView
                    android:id="@+id/picker_item_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="11sp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:layout_marginStart="8dp"
                    android:background="@drawable/badge_background_green"
                    android:visibility="gone"/>
            </LinearLayout>
            <TextView
                android:id="@+id/picker_item_subtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginTop="2dp"
                android:visibility="gone"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/picker_item_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:visibility="gone"/>
            
        <ImageView
            android:id="@+id/picker_item_trailing_icon"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="12dp"
            android:visibility="gone"
            android:tint="@android:color/darker_gray"/>

        <FrameLayout
        android:id="@+id/picker_item_check_container"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="0dp"
        android:visibility="invisible">
        <ImageView
            android:id="@+id/picker_item_check_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/picker_check_background"/>
        <ImageView
            android:id="@+id/picker_item_check"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check"
            android:tint="#9CCC65" />
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
