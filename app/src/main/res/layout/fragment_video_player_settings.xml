<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/colorBackground">

    <!-- Fixed Header -->
    <LinearLayout
        android:id="@+id/fixed_header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="?attr/colorTopBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/back_button"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/ic_close"
            android:tint="@android:color/white"/>
        <TextView
            android:id="@+id/header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/video_player_settings_title"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="12dp"/>
    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/content_scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/fixed_header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:clipToPadding="false"
        android:paddingBottom="32dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:paddingTop="16dp">

            <!-- Playback Controls Section Title -->
            <TextView
                android:id="@+id/heading_playback_controls"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:text="@string/playback_controls_heading"
                android:textColor="?attr/colorHeading"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/group_card_playback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <!-- Playback Speed Row -->
                <LinearLayout
                    android:id="@+id/row_playback_speed"
                    style="@style/SettingsGroupRow">
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="speed"
                        android:textSize="20sp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="@font/materialicons" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/playback_speed_label"
                        android:textColor="?attr/colorHeading"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/sub_playback_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <!-- Quick Speed Row -->
                <LinearLayout
                    android:id="@+id/row_quick_speed"
                    style="@style/SettingsGroupRow">
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="bolt"
                        android:textSize="20sp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="@font/materialicons" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/quick_speed_title"
                        android:textColor="?attr/colorHeading"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/sub_quick_speed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <!-- Seek Amount Row -->
                <LinearLayout
                    android:id="@+id/row_seek_amount"
                    style="@style/SettingsGroupRow">
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="replay_10"
                        android:textSize="20sp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="@font/materialicons" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/seek_amount_title"
                        android:textColor="?attr/colorHeading"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/sub_seek_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <!-- Controls Hide Delay Row -->
                <LinearLayout
                    android:id="@+id/row_controller_timeout"
                    style="@style/SettingsGroupRow">
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="timer"
                        android:textSize="20sp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="@font/materialicons" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/controls_hide_delay_title"
                        android:textColor="?attr/colorHeading"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/sub_controller_timeout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <!-- Keep Screen Awake Row -->
                <LinearLayout
                    android:id="@+id/row_keep_screen_on"
                    style="@style/SettingsGroupRow">
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="visibility"
                        android:textSize="20sp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="@font/materialicons" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/keep_screen_on_title"
                        android:textColor="?attr/colorHeading"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/sub_keep_screen_on"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <!-- Background Playback Row -->
                <LinearLayout
                    android:id="@+id/row_background_playback"
                    style="@style/SettingsGroupRow">
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="play_circle"
                        android:textSize="20sp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="@font/materialicons" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/background_playback_title"
                        android:textColor="?attr/colorHeading"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/sub_background_playback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <!-- Background Playback Timer Row -->
                <LinearLayout
                    android:id="@+id/row_background_playback_timer"
                    style="@style/SettingsGroupRow">
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="timer"
                        android:textSize="20sp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="@font/materialicons" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/background_playback_timer_title_short"
                        android:textColor="?attr/colorHeading"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/sub_background_playback_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/helper_playback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/playback_controls_helper"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"/>

            <!-- Sound/Mute Section Title -->
            <TextView
                android:id="@+id/heading_sound"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:text="@string/sound_heading"
                android:textColor="?attr/colorHeading"
                android:textStyle="bold" />

            <LinearLayout
                android:id="@+id/group_card_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/settings_group_card_bg"
                android:paddingTop="4dp"
                android:paddingBottom="4dp">

                <!-- Mute Playback Row -->
                <LinearLayout
                    android:id="@+id/row_mute_playback"
                    style="@style/SettingsGroupRow">
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="volume_off"
                        android:textSize="20sp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="@font/materialicons" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/mute_playback_title"
                        android:textColor="?attr/colorHeading"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/sub_mute_playback"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

                <View style="@style/SettingsDivider" />

                <!-- Audio Waveform Row -->
                <LinearLayout
                    android:id="@+id/row_audio_waveform"
                    style="@style/SettingsGroupRow">
                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="graphic_eq"
                        android:textSize="20sp"
                        android:textColor="@android:color/darker_gray"
                        android:fontFamily="@font/materialicons" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/audio_waveform_title"
                        android:textColor="?attr/colorHeading"
                        android:textStyle="bold"
                        android:textSize="15sp"/>
                    <TextView
                        android:id="@+id/sub_audio_waveform"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="12sp"/>
                    <ImageView
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:src="@drawable/ic_arrow_right"
                        android:tint="@android:color/darker_gray"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/helper_sound"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:text="@string/mute_playback_helper"
                android:textColor="@android:color/darker_gray"
                android:textSize="12sp"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
