<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground">

    <!-- Fixed Header -->
    <LinearLayout
        android:id="@+id/header_bar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp"
        android:paddingBottom="12dp"
        android:background="?attr/colorTopBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <ImageView
            android:id="@+id/action_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/ic_close"
            android:contentDescription="@string/universal_close"
            android:tint="@android:color/white"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:visibility="gone"
            android:layout_marginEnd="12dp"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/records_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:gravity="start|center_vertical"/>

        <ImageView
            android:id="@+id/action_more_options"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:padding="2dp"
            android:src="@drawable/ic_two_line_hamburger"
            android:contentDescription="@string/more_options"
            android:tint="@android:color/white"
            android:background="?attr/selectableItemBackgroundBorderless"/>
        
        <FrameLayout
            android:id="@+id/action_select_all_container"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="8dp"
            android:visibility="gone">
            <ImageView
                android:id="@+id/action_select_all_bg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/picker_check_background" />
            <ImageView
                android:id="@+id/action_select_all_check"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:src="@drawable/avd_check_draw"
                android:tint="@android:color/white"
                android:contentDescription="@string/trash_select_all" />
        </FrameLayout>
    </LinearLayout>

    <!-- *** START: Loading Indicator *** -->
    <ProgressBar
        android:id="@+id/loading_indicator"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:visibility="visible"/>
    <!-- *** END: Loading Indicator *** -->


    <!-- Empty State View (Centred) -->
    <LinearLayout
        android:id="@+id/empty_state_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"> <!-- Initially hidden -->
        <ImageView
            android:id="@+id/empty_state_icon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_no_videos"
            app:tint="#80FFFFFF"
            android:contentDescription="@string/no_videos_found"
            android:layout_marginBottom="16dp"/>
        <TextView
            android:id="@+id/empty_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_recordings_yet"
            android:textSize="18sp"
            android:textColor="#80FFFFFF"
            android:gravity="center"/>
    </LinearLayout>


    <!-- RecyclerView -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/header_bar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_view_records"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:paddingTop="8dp"
            android:visibility="gone"/> <!-- Initially hidden -->

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


    <!-- FABs -->
    <!-- Removed: View mode FAB moved to Records Options side sheet -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_delete_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_delete"
        app:backgroundTint="@color/danger_red"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Navigation FAB for scroll to top/bottom (mini size, circular, dark gray) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_scroll_navigation"
        style="?attr/floatingActionButtonSmallStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:visibility="gone"
        app:useCompatPadding="true"
        app:backgroundTint="@color/gray_button_filled"
        app:srcCompat="@drawable/ic_double_chevron"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/scroll_to_top"
        android:rotation="-90" />

    <!-- Fix Start: AppLock full-screen overlay (initially gone)  -->
    <FrameLayout
        android:id="@+id/applock_overlay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#000"
        android:visibility="gone"
        android:elevation="24dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
    <!--  Fix End: AppLock full-screen overlay -->

</androidx.constraintlayout.widget.ConstraintLayout>