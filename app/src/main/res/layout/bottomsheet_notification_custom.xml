<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp">
    <TextView
        android:id="@+id/custom_sheet_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notification_custom_editor_title"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="?attr/colorHeading"/>
    <TextView
        android:id="@+id/custom_sheet_subtitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/notification_custom_editor_helper"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@android:color/darker_gray"/>
    <EditText
        android:id="@+id/input_custom_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:hint="@string/notification_custom_title_placeholder"
        android:singleLine="true"
        android:maxLines="1"
        android:padding="10dp"
        android:background="@drawable/settings_group_card_bg"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"/>
    <EditText
        android:id="@+id/input_custom_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:hint="@string/notification_custom_text_placeholder"
        android:maxLines="3"
        android:padding="10dp"
        android:background="@drawable/settings_group_card_bg"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/darker_gray"/>
    <!-- Removed hide stop switch here; it lives in main screen -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginTop="18dp">
        <Button
            android:id="@+id/button_custom_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/notification_setup_ok"/>
    </LinearLayout>
</LinearLayout>
