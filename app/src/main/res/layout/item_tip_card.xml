<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="center">

        <!-- Tip number/counter -->
        <TextView
            android:id="@+id/tip_counter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1/11"
            android:textColor="?attr/pickerIconTint"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Lightbulb icon -->
        <TextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:fontFamily="@font/materialicons"
            android:text="lightbulb"
            android:textColor="?attr/pickerIconTint"
            android:textSize="32sp"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Tip content -->
        <TextView
            android:id="@+id/tip_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Long press preview to disable it."
            android:textColor="?attr/pickerTextPrimary"
            android:textSize="16sp"
            android:textAlignment="center"
            android:lineSpacingExtra="4dp"
            android:gravity="center" />

    </LinearLayout>

</androidx.cardview.widget.CardView>