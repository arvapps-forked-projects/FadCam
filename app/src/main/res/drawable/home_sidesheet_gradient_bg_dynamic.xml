<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Dynamic gradient using theme attributes - Home sidebar (left-side) rounded on right -->
    <corners
        android:topLeftRadius="4dp"
        android:bottomLeftRadius="4dp"
        android:topRightRadius="24dp"
        android:bottomRightRadius="24dp"/>
    <gradient
        android:type="linear"
        android:angle="90"
        android:startColor="?attr/pickerGradientStart"
        android:centerColor="?attr/pickerGradientMid"
        android:endColor="?attr/pickerGradientEnd" />
</shape>