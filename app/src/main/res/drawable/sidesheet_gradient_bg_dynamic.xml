<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
    <!-- Dynamic gradient using theme attributes - Records sidebar (right-side) rounded on left -->
    <corners
        android:topLeftRadius="24dp"
        android:bottomLeftRadius="24dp"
        android:topRightRadius="4dp"
        android:bottomRightRadius="4dp"/>
    <gradient
        android:type="linear"
        android:angle="90"
        android:startColor="?attr/pickerGradientStart"
        android:centerColor="?attr/pickerGradientMid"
        android:endColor="?attr/pickerGradientEnd" />
</shape>